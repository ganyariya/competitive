{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "GCC Build",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-O0",
				"${file}",
				"-I",
				".",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		}
	]
}